
@using Abp.Web.Mvc.Extensions
@model Jax.Web.Models.Task.CreateTaskViewModel

@section scripts
{
    @Html.IncludeScript("~/Views/Tasks/create.js")
}

<h2>
    @L("NewTask")
</h2>

<form id="TaskCreationForm">

    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" placeholder="@L("Title")" required maxlength="@Jax.Entities.Task.MaxTitleLength">
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")" maxlength="@Jax.Entities.Task.MaxDescriptionLength">
    </div>

    <div class="form-group">
        @Html.Label(L("AssignedUser"))
        @Html.DropDownList(
            "AssignedUserId",
            Model.Users,
            new
            {
                @class = "form-control",
                id = "AssignedUserCombobox"
            })
    </div>

    <button type="submit" class="btn btn-default">@L("Save")</button>

</form>